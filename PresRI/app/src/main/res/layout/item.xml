<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgPresiden"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/soekarno" />

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ir. Soekarno"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtDeskripsi"
        app:layout_constraintStart_toStartOf="@+id/txtDeskripsi"
        app:layout_constraintTop_toTopOf="@+id/imgPresiden" />

    <TextView
        android:id="@+id/txtDeskripsi"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Presiden ke-1."
        app:layout_constraintBottom_toBottomOf="@+id/imgPresiden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPresiden"
        app:layout_constraintTop_toBottomOf="@+id/txtJudul" />

</androidx.constraintlayout.widget.ConstraintLayout>